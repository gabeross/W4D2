<% action_url = (action == :new) ? cats_url : cat_url(cat) %>    
 

<form action="<%= action_url %>" method="post">
    <% if action == :edit %>
      <input type="hidden" name="_method" value="PATCH">
    <% end %>
  <label>
    name:
    <input type="text" name="cat[name]" value=" <%= cat.name %> ">
  </label>
  <br>
  <br>
  <label>
    color:
    <select name="cat[color]">
      <option value="select_a_color" selected>Select a color!</option>
      <option value="black">Black</option>
      <option value="brown">Bowwn</option>
      <option value="white">White</option>
      <option value="grey">Grey</option>
      <option value="Tabby">Tabby</option>
    </select>
  </label>
  <br>
  <br>
  <label>
    birthday:
    <input type="date" name="cat[birth_date]" value=" <%= cat.birth_date %> ">
  </label>
  <br>
  <br>
  <label>
    sex:
    <input type="radio" name="cat[sex]" value="male" checked > M
    <input type="radio" name="cat[sex]" value="female"> F <br>
  </label>
  <br>
  <br>
  <label>
    description:
    <textarea name="cat[description]" rows="10" cols="30">
        Tell us about your cat.
    </textarea>

  </label>
  <br>  
  <br>
  <input type="submit" name ="" value=" <%= action == :edit ? 'Fix cat' : 'New cat'%> ">
</form>